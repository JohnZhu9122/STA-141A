# 1(a)
library(readr)
tips <- read_csv("tips.csv")
head(tips)
glimpse(tips)
summary(tips)

tips_small <- tips |>
  select(total_bill, tip, sex, smoker)

tips_small

tips_dataframe <- data.frame(
    total_bill = tips$total_bill,
    tip = tips$tip,
    sex = tips$sex,
    smoker = tips$smoker,
    day = tips$day
)
View(tips_dataframe)


# 1(b)
library(dplyr)
tips_filter <- tips %>% filter (total_bill > 20)
View(tips_filter)

tips <- read_csv("tips.csv")
library(dplyr)
tips |>
  filter(total_bill > 20)

# 1(c)
tips_filter <- tips %>% filter (total_bill > 20)
tips_decease <- tips_filter %>% arrange(desc(tip)) 
View(tips_decease)

# 1(d)
tip_means <-mean(tips_filter$tip)
tip_means

# 2(a)
tips2 <- tips |>
  mutate(tip_pct = tip / total_bill)

View(tips2)